@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-3 fw-bold mb-4 text-gradient">Real-Time Weather</h1>
            <p class="lead mb-5 text-secondary">Powered by Dapr, Open-Meteo, and Zippopotam.us</p>

            <form method="get" class="mb-5">
                <div class="input-group input-group-lg shadow-sm rounded-pill overflow-hidden">
                    <input type="text" asp-for="ZipCode" class="form-control border-0 ps-4" placeholder="Enter Zipcode (e.g. 10001)" />
                    <button class="btn btn-primary px-4 border-0" type="submit">
                        <i class="bi bi-search me-2"></i>Search
                    </button>
                </div>
            </form>

            @if (Model.Forecast != null)
            {
                <div class="weather-card p-5 rounded-4 shadow-lg text-white text-start mb-4 position-relative overflow-hidden">
                    <div class="position-relative z-1">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h2 class="h1 fw-bold mb-1">@Model.Forecast.City, @Model.Forecast.State</h2>
                                <p class="opacity-75 mb-0">Zipcode: @Model.Forecast.ZipCode | @Model.Forecast.Date</p>
                            </div>
                            <div class="text-end">
                                <div class="display-1 fw-bold">@Model.Forecast.TemperatureF°</div>
                                <div class="h4 opacity-75">@Model.Forecast.Summary</div>
                            </div>
                        </div>
                    </div>
                    <div class="weather-bg"></div>
                </div>

                @if (Model.Forecast.HourlyForecasts != null && Model.Forecast.HourlyForecasts.Any())
                {
                    <div class="mb-5 text-start">
                        <h3 class="h4 fw-bold mb-4 text-gradient">Hourly Forecast</h3>
                        <div class="d-flex overflow-auto pb-3 gap-3 forecast-scroll">
                            @foreach (var hourly in Model.Forecast.HourlyForecasts)
                            {
                                <div class="forecast-card p-3 rounded-4 shadow-sm text-center bg-white border">
                                    <div class="small fw-bold text-secondary mb-2">@DateTime.Parse(hourly.Time).ToString("h tt")</div>
                                    <div class="fs-4 fw-bold mb-1">@Math.Round(hourly.TemperatureF)°</div>
                                    <div class="small text-muted" title="@hourly.Summary">@hourly.Summary</div>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (Model.Forecast.DailyForecasts != null && Model.Forecast.DailyForecasts.Any())
                {
                    <div class="text-start mb-5">
                        <h3 class="h4 fw-bold mb-4 text-gradient">Weekly Forecast</h3>
                        <div class="row g-3">
                            @foreach (var daily in Model.Forecast.DailyForecasts)
                            {
                                <div class="col-12">
                                    <div class="forecast-card p-3 rounded-4 shadow-sm bg-white border d-flex align-items-center justify-content-between">
                                        <div class="fw-bold" style="width: 120px;">@DateTime.Parse(daily.Date).ToString("dddd")</div>
                                        <div class="text-muted small flex-grow-1">@daily.Summary</div>
                                        <div class="fw-bold">
                                            <span class="text-primary">@Math.Round(daily.TemperatureMaxF)°</span>
                                            <span class="text-muted ms-2 opacity-50">@Math.Round(daily.TemperatureMinF)°</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="subscription-section p-4 rounded-4 shadow-sm bg-light border text-start mt-5">
                        <h3 class="h4 fw-bold mb-3"><i class="bi bi-bell-fill text-warning me-2"></i>Never Miss a Frost</h3>
                        <p class="text-muted mb-4">Subscribe to receive email alerts whenever the temperature in <strong>@Model.Forecast.City</strong> is predicted to drop below freezing (32°F).</p>
                        
                        @if (!string.IsNullOrEmpty(Model.SubscriptionMessage))
                        {
                            <div class="alert @(Model.SubscriptionMessage.Contains("Error") ? "alert-danger" : "alert-success") alert-dismissible fade show mb-4 rounded-3" role="alert">
                                @Model.SubscriptionMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form asp-page-handler="Subscribe" method="post">
                            <input type="hidden" asp-for="ZipCode" />
                            <div class="row g-3">
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white border-0 ps-3"><i class="bi bi-envelope text-muted"></i></span>
                                        <input type="email" asp-for="SubscriberEmail" class="form-control border-0 py-2" placeholder="Enter your email address" required />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <button class="btn btn-dark w-100 py-2 rounded-3 fw-bold" type="submit">Subscribe Now</button>
                                </div>
                            </div>
                        </form>
                    </div>
                }
            }
            else
            {
                <div class="card border-0 shadow-sm rounded-4 p-4 text-center">
                    <div class="text-warning display-4 mb-3">⚠️</div>
                    <h3>Whoops!</h3>
                    <p class="text-secondary">Could not fetch weather data for Zipcode <strong>@Model.ZipCode</strong>. Please check the zipcode and try again.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .weather-card {
        background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
        transition: transform 0.3s ease;
    }

    .weather-card:hover {
        transform: translateY(-5px);
    }

    .weather-bg {
        position: absolute;
        top: -50%;
        right: -20%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
        border-radius: 50%;
    }

    .forecast-card {
        transition: all 0.2s ease;
        border: 1px solid rgba(0,0,0,0.05) !important;
    }

    .forecast-scroll .forecast-card {
        width: 140px;
        flex-shrink: 0;
        min-height: 120px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .forecast-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1) !important;
        border-color: #3b82f6 !important;
    }

    .forecast-scroll::-webkit-scrollbar {
        height: 6px;
    }

    .forecast-scroll::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .forecast-scroll::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 10px;
    }

    .forecast-scroll::-webkit-scrollbar-thumb:hover {
        background: #94a3b8;
    }

    .rounded-4 {
        border-radius: 1.5rem !important;
    }

    .rounded-pill {
        border-radius: 50rem !important;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
