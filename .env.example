# Confluent Cloud Kafka Configuration
# Copy this file to .env and fill in your Confluent Cloud credentials

# Kafka Bootstrap Servers (from Confluent Cloud cluster settings)
# Example: pkc-xxxxx.us-east-1.aws.confluent.cloud:9092
KAFKA_BOOTSTRAP_SERVERS=

# Security Protocol (usually SASL_SSL for Confluent Cloud)
KAFKA_SECURITY_PROTOCOL=SASL_SSL

# SASL Mechanism (usually PLAIN for Confluent Cloud)
KAFKA_SASL_MECHANISM=PLAIN

# API Key (from Confluent Cloud)
KAFKA_SASL_USERNAME=

# API Secret (from Confluent Cloud)
KAFKA_SASL_PASSWORD=

# Consumer Group ID (optional, defaults to "notification-service")
# KAFKA_GROUP_ID=notification-service

# Topics to subscribe to (comma-separated)
# KAFKA_TOPICS=weather-alerts,general-events
